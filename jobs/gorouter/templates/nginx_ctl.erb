#!/bin/bash

RUN_DIR=/var/vcap/sys/run/nginx_gorouter
LOG_DIR=/var/vcap/sys/log/nginx_gorouter
PIDFILE=$RUN_DIR/nginx.pid
NGINX_PACKAGE_DIR=/var/vcap/packages/gorouter
NGINX_JOB_DIR=/var/vcap/jobs/gorouter
CONFIG_DIR=$NGINX_JOB_DIR/config

source /var/vcap/packages/common/utils.sh


case $1 in

  start)

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > $PIDFILE


    exec /var/vcap/packages/nginx/sbin/nginx \
         -c $NGINX_JOB_DIR/config/nginx.conf \
	      >> $LOG_DIR/nginx.stdout.log \
	      2>> $LOG_DIR/nginx.stderr.log
    ;;

  stop)
    #force kill immediately; drain script should have already run
    kill_and_wait $PIDFILE 0 1

    ;;

  *)
    echo "Usage: nginx_ctl {start|stop}"

    ;;

esac
